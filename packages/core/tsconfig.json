{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "lib": ["es6"]
    },
    "include": [
        "./src/**/*", 
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
    "compileOnSave": true,
}